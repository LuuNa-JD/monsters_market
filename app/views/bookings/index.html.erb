<h1>Vos réservations</h1>
<div class="container">
  <h1 class="mt-5">Vos Réservations</h1>
  <table class="table table-striped table-bordered mt-3">
    <thead>
      <tr>
        <th>ID</th>
        <th>Date de Réservation</th>
        <th>Client</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.id %></td>
          <td><%= booking.reservation_date.strftime("%d %b %Y") %></td>
          <td><%= booking.client_name %></td>
          <td>
            <%= link_to "Détails", booking, class: "btn btn-primary btn-sm" %>
            <%= link_to "Éditer", edit_booking_path(booking), class: "btn btn-warning btn-sm" %>
            <%= link_to "Supprimer", booking, method: :delete, data: { confirm: "Êtes-vous sûr ?" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Nouvelle Réservation", new_user_booking_path(@user), class: "btn btn-success" %>
</div>
