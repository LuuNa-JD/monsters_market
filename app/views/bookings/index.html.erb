<h1>Vos réservations</h1>
<div class="container">
  <h1 class="mt-5">Vos Réservations</h1>
  <% if @user.vendor %>
      <table class="table table-striped table-bordered mt-3">
        <thead>
          <tr>
            <th>ID</th>
            <th>Date de Réservation</th>
            <th>Client</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @bookings.each do |booking| %>
            <tr>
              <td><%= booking.id %></td>
              <td></td>
              <td><%= booking.user.first_name %></td>
              <td>
                <%= link_to "Détails", user_bookings_path, class: "btn btn-primary btn-sm" %>

              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
  <% else %>
       <table class="table table-striped table-bordered mt-3">
        <thead>
          <tr>
            <th>ID</th>
            <th>Date de Réservation</th>
            <th>Monster</th>

          </tr>
        </thead>
        <tbody>
          <% @bookings.each do |booking| %>
            <tr>
              <td><%= booking.id %></td>
              <td></td>
              <td><%= booking.user.first_name %></td>

            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  <%= link_to "Monsters", monsters_path, class: "btn btn-success" %>
</div>
