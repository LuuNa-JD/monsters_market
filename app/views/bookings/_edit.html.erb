
<div class="container mt-4 p-4 ">
<h1>Éditer la Réservation</h1>
  <div class="row justify-content-center">
    <div class="col-md-4 border shadow-sm mt-4 p-4">
      <%= simple_form_for [booking.user, booking] do |f| %>
      <%= f.input :approved, collection: [['Approved', true], ['Denied', false]] %>
      <%= f.submit "Soumettre", class: "btn btn-success" %>
      <% end %>

    </div>
  </div>
</div>
